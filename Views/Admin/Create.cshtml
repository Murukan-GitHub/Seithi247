                        ],
                        callbacks: {
                            onImageUpload: function (files) {
                                uploadImage(files[0]);
                            }
                        }
                    });
                    });

                    function uploadImage(file) {
                        let data = new FormData();
                        data.append("file", file);

                        $.ajax({
                                    url: '/Admin/UploadImage',
                            method: 'POST',
                            data: data,
                            processData: false,
                            contentType: false,
                            success: function (url) {
                                $('#editor').summernote('insertImage', url);
                            }
                        });
                    }

